{
  // "options_page": "html/options.html",
  "options_ui": {
    "page": "html/options.html",
    "chrome_style": true
  },

  "browser_action": {
    "default_title": "LiveTV",
    "default_icon": "images/logo48x48.png",
    "default_popup": "html/popup.html"
  },

  "icons": {
    "16": "images/logo16x16.png",
    "48": "images/logo48x48.png",
    "128": "images/logo128x128.png"
  },

  "permissions": [
    "tabs",
    "storage",
    "alarms",
    "bookmarks",
    "*://*.douyu.com/*",
    "*://*.douyucdn.cn/*",
    "*://*.bilibili.com/*",
    "*://*.panda.tv/*",
    // "*://*.zhanqi.tv/*",
    "*://*.quanmin.tv/*"
  ],

  "background": {
    "scripts": [
      "js/api.js",
      "js/bookmarkHandler.js",
      "js/queueHandler.js",
      "js/chromeHandler.js",
      "js/channelHandler.js",
      "js/settings.js",
      "js/eventPage.js"
    ],
    "persistent": false
  },

  "manifest_version": 2,
  "name": "LiveTV",
  "description": "定时查询主播是否在线,目前支持bilibili, douyu, panda, quanmin",
  // "update_url": "http://clients2.google.com/service/update2/crx",
  "version": "1.0.0"
}
